void {{ test_method_name | default('h2_container_starts_and_accepts_jdbc') }}() throws Exception {
    try (org.testcontainers.containers.JdbcDatabaseContainer<?> db =
             new org.testcontainers.containers.PostgreSQLContainer<>("{{ image | default('postgres:16-alpine') }}")
                 .withDatabaseName("{{ db_name | default('testdb') }}")
                 .withUsername("{{ username | default('test') }}")
                 .withPassword("{{ password | default('test') }}")) {

        db.start();
        try (java.sql.Connection conn = java.sql.DriverManager.getConnection(db.getJdbcUrl(), db.getUsername(), db.getPassword());
             java.sql.Statement st = conn.createStatement()) {
            st.execute("CREATE TABLE demo(id INT PRIMARY KEY, name VARCHAR(50))");
            st.execute("INSERT INTO demo(id, name) VALUES (1,'hello')");
            try (java.sql.ResultSet rs = st.executeQuery("SELECT name FROM demo WHERE id=1")) {
                rs.next();
                org.assertj.core.api.Assertions.assertThat(rs.getString(1)).isEqualTo("hello");
            }
        }
    }
}